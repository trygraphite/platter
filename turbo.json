{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build", "^db:generate"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist"],
      "env": [
        "DATABASE_URL",
        "NEXT_PUBLIC_APP_URL",
        "BETTER_AUTH_URL",
        "BETTER_AUTH_SECRET",
        "EDGE_STORE_ACCESS_KEY",
        "EDGE_STORE_SECRET_KEY"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^db:generate"]
    },
    "//#format-and-lint": {},
    "//#format-and-lint:fix": {
      "cache": false
    },
    "db:generate": {
      "cache": false
    }
  }
}
