{
  "$schema": "https://biomejs.dev/schemas/2.1.4x/schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
    "assist": {
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  },
    "files": {
    "ignoreUnknown": true,
    "includes": ["apps/**", "packages/db/**", "packages/tsconfig/**"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": {
        "noSvgWithoutTitle": "off"
      }
    }
  },
  "overrides": [
    {
      "includes": ["packages/ui/**"],
      "linter": {
        "enabled": false
      },
      "formatter": {
        "enabled": false
      }
    }
  ],
  "javascript": {
    "formatter": {
      "quoteStyle": "double"
    }
  }
}
